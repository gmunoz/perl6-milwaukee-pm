---- perl6
== # Read/Write trait

class Phone {
	has $.OS;
	has $.carrier is rw;
}

my $phone = Phone.new(OS => "Android", carrier => "AT&T");

say $phone.carrier;   # AT&T

$phone.carrier = "Verizon";

say $phone.carrier;   # Verizon

