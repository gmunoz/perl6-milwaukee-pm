---- perl6

class Phone {
	has $.OS;       # public, read-only attribute
	has $.carrier;
}

my $phone = Phone.new(OS => "Android", carrier => "AT&T");

say $phone.WHAT;  # (Phone)

say $phone.OS;    # Android

$phone.OS = "iOS" # Exception: Can't write to a readonly variable.

